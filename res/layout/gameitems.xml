    <TextView
        android:id="@+id/game"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </TextView>

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </TextView>

    <TextView
        android:id="@+id/timestart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </TextView>

    <TextView
        android:id="@+id/timeend"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </TextView>

</RelativeLayout>


